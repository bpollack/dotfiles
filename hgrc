[alias]
a = addremove
l = pull
lt = parent --template '{latesttag}+{latesttagdistance}-{node|short}\n'
n = push -r .
no = outgoing -r .
obliterate = purge --all
p = push
reset = revert --no-backup

obliterate = purge --all
sendit = email -g -t mercurial-devel@selenic.com -f "Benjamin Pollack <benjamin@bitquabit.com>"

; Log commands
nlog = log --style=$HOME/src/dotfiles/mercurial-cli-templates/map-cmdline.nlog
sglog = log --graph --style=$HOME/src/dotfiles/mercurial-cli-templates/map-cmdline.sglog
slog = log --style=$HOME/src/dotfiles/mercurial-cli-templates/map-cmdline.slog

[merge-tools]
kdiff3.executable = /Applications/kdiff3.app/Contents/MacOS/kdiff3
kdiff3.args = --L1 base --L2 local --L3 other $base $local $other -o $output
kdiff3.gui = True

[pager]
